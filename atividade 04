#include <stdio.h>

int contar_pares(int a, int b, int c) {
    int contador = 0;

    if (a % 2 == 0) contador++;
    if (b % 2 == 0) contador++;
    if (c % 2 == 0) contador++;

    return contador;
}

int main() {
    int a, b, c, pares;

    printf("Digite o valor de a: ");
    scanf("%d", &a);
    printf("Digite o valor de b: ");
    scanf("%d", &b);
    printf("Digite o valor de c: ");
    scanf("%d", &c);

    pares = contar_pares(a, b, c);

    printf("Quantidade de n√∫meros pares: %d\n", pares);

    return 0;
}
